{
    // DEMOS!
    "update.mode": "none",
    "extensions.autoCheckUpdates": false,
    // SETTINGS
    "workbench.settings.editor": "json",
    // EDITOR
    "editor.cursorSmoothCaretAnimation": true,
    "editor.renderIndentGuides": true,
    "editor.renderWhitespace": "none",
    "editor.minimap.enabled": false,
    "editor.fontLigatures": true,
    // "editor.fontFamily": "Mononoki Nerd Font",
    // "editor.fontFamily": "SF Mono",
    "editor.fontFamily": "Operator Mono Lig",
    "editor.fontSize": 19,
    "editor.multiCursorModifier": "alt",
    "editor.copyWithSyntaxHighlighting": false,
    "editor.suggestSelection": "first",
    "diffEditor.renderSideBySide": false,
    // "editor.lineHeight": 30,
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    // Files
    "files.autoSaveDelay": 5000,
    "files.autoSave": "off",
    "files.associations": {
        "Dockerfile-centos": "dockerfile",
        "Dockerfile_*": "dockerfile",
        "dockerfile_*": "dockerfile"
    },
    // WORKBRANCH
    "workbench.editor.showTabs": true,
    "vscode_custom_css.imports": [
        "file:///home/mahdi/apps/code/style.css"
    ],
    "workbench.iconTheme": "material-icon-theme",
    "workbench.statusBar.visible": true,
    "workbench.activityBar.visible": true,
    // VIM
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-f>": false
    },
    // "vim.enableNeovim": true,
    // "vim.neovimPath": "/usr/bin/nvim",
    "vim.leader": "<space>",
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                ":"
            ],
            "commands": [
                "workbench.action.showCommands"
            ]
        },
        {
            "before": [
                "<leader>",
                "<leader>"
            ],
            "commands": [
                "workbench.action.quickOpen"
            ]
        },
        {
            "before": [
                "<leader>",
                "p"
            ],
            "commands": [
                "workbench.action.toggleSidebarVisibility"
            ]
        },
        {
            "before": [
                "<leader>",
                "d"
            ],
            "commands": [
                "editor.action.revealDefinition"
            ]
        },
        {
            "before": [
                "<leader>",
                "w",
                "w"
            ],
            "commands": [
                "workbench.action.navigateEditorGroups"
            ]
        }
    ],
    // Prettier
    "prettier.tabWidth": 4,
    "prettier.singleQuote": true,
    "C_Cpp.updateChannel": "Insiders",
    "window.menuBarVisibility": "toggle",
    "keyboard.dispatch": "keyCode",
    "C_Cpp.default.cppStandard": "c++11",
    "C_Cpp.default.intelliSenseMode": "gcc-x64",
    "C_Cpp.clang_format_style": "{ BasedOnStyle: LLVM, UseTab: Never, IndentWidth: 4, TabWidth: 4, AllowShortIfStatementsOnASingleLine: false, IndentCaseLabels: false, ColumnLimit: 0, AccessModifierOffset: -4 }",
    "editor.lineNumbers": "on",
    "markdown.preview.lineHeight": 1.8,
    "vsintellicode.modify.editor.suggestSelection": "choseToUpdateConfiguration",
    "window.zoomLevel": 0,
    "latex-workshop.view.pdf.viewer": "external",
    "python.jediEnabled": false,
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "breadcrumbs.enabled": false,
    "editor.renderControlCharacters": false,
    "java.errors.incompleteClasspath.severity": "ignore",
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "vsicons.dontShowNewVersionMessage": true,
    "kite.showWelcomeNotificationOnStartup": false,
    "javascript.preferences.importModuleSpecifier": "relative",
    "typescript.preferences.importModuleSpecifier": "relative",
    "typescript.preferences.quoteStyle": "single",
    "javascript.preferences.quoteStyle": "single",
    "bracketPairColorizer.showHorizontalScopeLine": false,
    "bracketPairColorizer.showVerticalScopeLine": false,
