[init]
	defaultBranch = "main"

[user]
	email = "mahdi.se@yahoo.com"
	name = "Mahdi Seyedan"

[core]
  whitespace = error

[http]
	postBuffer = 524288000

[advice]
  addEmptyPathspec = false
  ; pushNonFastForward = false
  statusHints = false

[url "git@github.com:"]
  insteadOf = "gh:"

[status]
  branch = true
  showStash = true
  showUntrackedFiles = all

[diff]
  context = 3
  renames = copies
  interHunkContext = 10

[pager]
  diff = diff-so-fancy | less

[diff-so-fancy]
  markEmptyLines = false

[color "diff"]
  ; meta = black bold
  ; frag = magenta
  context = white
  ; whitespace = yellow reverse
  ; old = red

[interactive]
  diffFilter = diff-so-fancy --patch
  singlekey = true

[push]
  autoSetupRemove = true
  default = current
  followTags = true

[pull]
  rebase = true

[rebase]
  autoStash = true

[commit]
  verbose = true

[log]
  abbrevCommit = true  # short commits
  graphColors = blue,yellow,cyan,magenta,green,red

[alias]
	af = "!git add $(git ls-files -m -o --exclude-standard | fzf -m)"
	amend = "commit -a --amend"
	count = "shortlog -sn"
	day = "!sh -c 'git log --reverse --no-merges --branches=* --date=local --after=\"yesterday 11:59PM\" --author=\"`git config --get user.name`\"'"
	graph = "log --all --decorate --graph --oneline"
	ignore = "!gi() { curl -sL https://www.gitignore.io/api/$@ ;}; gi"
	l = "log --graph --pretty=format:'%Cred%h%Creset %C(bold blue)%an%C(reset) - %s - %Creset %C(yellow)%d%Creset %Cgreen(%cr)%Creset' --abbrev-commit --date=relative"
	la = "!git config -l | grep alias | cut -c 7-"
	review = "!git log --no-merges --pretty=%an | head -n 100 | sort | uniq -c | sort -nr"
	s = "status --short"
	ss = "status"
	undo = "reset --soft HEAD~1"
	update = "!git fetch upstream && git rebase upstream/`git rev-parse --abbrev-ref HEAD`"
