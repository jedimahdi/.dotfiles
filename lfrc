  printf "URL: "
  read URL
  aria2c $URL
}}

cmd dragon-out %/nix/store/r8wy9j13hj23av0na15mhj9n1y4mc0sg-xdragon-1.2.0/bin/xdragon -a -x "$fx"
cmd editor-open $$EDITOR $f
